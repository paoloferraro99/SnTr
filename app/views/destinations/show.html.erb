
<div class="text-center large">

  <div class="col-md-12">
    <%= link_to "Edit Destination", edit_destination_path, class: 'btn btn-success' %>
  
    <%= link_to "Delete Destination", [@destination], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this destination?' } %>
  </div>

  <div class="col-md-12">
    <h2><%= @destination.country %></h2>
  </div>

  <div class="col-md-12">
    <h3>$<%= @destination.individual_price %></h3>
  </div>

  <div class="col-md-12">
    <h5>Name: <%= @destination.name %></h5>
  </div>

  <div class="col-md-12">
    Region: <%= @destination.region %>
  </div>

  <div class="col-md-12">
    Released?: <%= @destination.released %>
  </div>

  <div class="col-md-12">
    Chronological order: <%= @destination.chronological_order %>
  </div>

  <div class="col-md-12">
    .......................................................
  </div>
  
  <div class="col-md-12">

  </div>

</div>




<div class="col-md-12">
<% if current_user %>

  <%=link_to "", class: 'btn btn-success', data: {target: @cart_action, addUrl: add_to_cart_path(@destination), removeUrl: remove_from_cart_path(@destination)} do%>
  
      <span><%=@cart_action%></span> Cart
      <i class="glyphicon glyphicon-shopping-cart"></i>

  <%end%>

<%end%>
  </div>
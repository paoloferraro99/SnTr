
<div class="text-center large">

  <div class="col-md-12">
    <%= link_to "Edit Destination", edit_destination_path, class: 'btn btn-success' %>
  
    <%= link_to "Delete Destination", [@destination], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this destination?' } %>
  </div>

  <div class="col-md-12">
    <h3><%= @destination.name %></h3>
  </div>


  <div class="col-md-12">
    Region: <%= @destination.region %>
  </div>

  <div class="col-md-12">
    Country: <%= @destination.country %>
  </div>

  <div class="col-md-12">
    Released?: <%= @destination.released %>
  </div>

  <div class="col-md-12">
    Individual price: <%= @destination.individual_price %>
  </div>

  <div class="col-md-12">
    Chronological order: <%= @destination.chronological_order %>
  </div>

  <div class="col-md-12">
    Created at: <%= @destination.created_at %>
  </div>

  <div class="col-md-12">
    Updated at: <%= @destination.updated_at %>
  </div>


  <div class="col-md-12">
    .......................................................
  </div>
  <div class="col-md-12">

  </div>
  <%= link_to "Destinations", destinations_path %>

</div>
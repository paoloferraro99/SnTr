

<div class="text-center large">

  <div class="col-md-12">
    
  </div>
  <div class="col-md-12">
    <h2><%= @subscription.name %></h2>
    <p>
      <% if @subscription.primary == true %><span class="text text-primary">Primary Subscription</span>
      <% elsif @subscription.primary == false %><span class="text text-danger">Gift Subscription</span><% end %>
    </p>
  </div>

  <div class="col-md-12">
    You are subscribed for: <% if @subscription.months_subscribed == nil %><span>0</span><% end %><%= @subscription.months_subscribed %> months.
  </div>

  <div class="col-md-12">
    ..................................................
  </div>

  <div class="col-md-12">
    <h3>Your Upcoming trips:</h3>
    <% @destinations.each do |dest| %>
      <div class="col-md-12">
        <%= dest.name %> - <%= dest.region %>
      </div>
    <% end %>
  </div>

  <div class="col-md-12">
    ...........
  </div>

  <div class="col-md-12">
    <div class="col-md-12">
    <%= link_to "Delete Subscription", [@subscription], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this subscription?' } %>
  </div>

  <div class="col-md-12">
    ...................................................................
  </div>

  <div class="col-md-12">
    <%= link_to "User Profile", current_user %>
  </div>

  <div class="col-md-12">
    <%= link_to "Start Travelling", new_subscription_path %>
  </div>



  <div class="col-md-12">
  </div>

</div>
